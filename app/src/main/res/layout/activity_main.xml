<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.view.MainActivity">

    <Button
        android:id="@+id/repeat_auth_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="@dimen/margin_biggest_24dp"
        android:layout_marginEnd="@dimen/margin_biggest_24dp"
        android:layout_marginBottom="50dp"
        android:background="@color/base_color"
        android:fontFamily="@font/nunito_sans_bold"
        android:text="@string/try_register_one_more_time"
        android:textAppearance="@style/MovieTitleText"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_regular"
        android:visibility="invisible"
        tools:visibility="visible" />

</FrameLayout>