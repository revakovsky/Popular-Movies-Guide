<resources>
    <!-- Base application theme. -->
    <style name="Theme.PopularMoviesGuide" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/base_color</item>
        <item name="colorPrimaryVariant">@color/base_color_darker</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/base_color</item>

        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/title_text_color</item>
        <item name="android:textAppearance">@style/MovieTitleText</item>
    </style>

    <style name="SplashTheme" parent="Theme.PopularMoviesGuide">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="MoviesTheme" parent="Theme.PopularMoviesGuide">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="AuthScreenTheme" parent="Theme.PopularMoviesGuide">
        <item name="android:windowBackground">@drawable/auth_background</item>
        <item name="android:scaleGravity">center</item>
        <item name="android:textColorHint">@color/title_text_color</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:colorButtonNormal">@color/base_color</item>
    </style>

</resources>