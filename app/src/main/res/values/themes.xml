<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PopularMoviesGuide" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/base_color</item>
        <item name="colorPrimaryVariant">@color/base_color_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/nunito_sans</item>
        <item name="">@font/nunito_sans_extrabold</item>
        <item name="titleTextColor">#7e57c2</item>
    </style>

    <style name="SplashTheme" parent="Theme.PopularMoviesGuide">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

</resources>