<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.popularMoviesGuide">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".presentation.app.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.PopularMoviesGuide">
        <activity
            android:name="com.example.popularMoviesGuide.presentation.view.MoviesDetailsActivity"
            android:exported="true" />
        <activity
            android:name="com.example.popularMoviesGuide.presentation.view.MoviesActivity"
            android:exported="false"
            android:theme="@style/MoviesTheme" />
        <activity
            android:name="com.example.popularMoviesGuide.presentation.view.MainActivity"
            android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>